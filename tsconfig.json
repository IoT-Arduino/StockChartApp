{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "types": [
      "@types/jest",
      "jest"
    ]
  },
 "include": [
    "**/*.ts",
    "**/*.tsx",
    "const/settings.js",
    "**/__mocks__/**/*.js",
  ],
  "exclude": [
    "node_modules",
    "cypress"
  ]
}
